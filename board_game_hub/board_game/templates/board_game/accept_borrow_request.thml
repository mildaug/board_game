{% extends 'base.html' %}
{% load static %}

{% block content %}
    <h1>Borrow Request Accepted</h1>
    <p>The borrow request has been accepted.</p>
    <p>Game: {{ borrow_request.game }}</p>
    <p>Borrower: {{ borrow_request.borrower }}</p>
    <p>Due Back: {{ borrow_request.due_back }}</p>
    <p>Message: {{ borrow_request.message }}</p>
    <a href="{% url 'game_detail' borrow_request.game.pk %}">View Game Details</a>
{% endblock %}